<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<!--数据库驱动 -->
	<classPathEntry location="D:/dev/repo/maven/mysql/mysql-connector-java/5.1.38/mysql-connector-java-5.1.38.jar" />
	<context id="DB2Tables" targetRuntime="MyBatis3">
		<!-- 分页插件 -->
		<plugin type="com.sword.smvcm.mybatis.plugin.MySQLPaginationPlugin" />
		<plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
		
		<commentGenerator>
			<property name="suppressDate" value="true" />
		</commentGenerator>
		<!--数据库链接地址账号密码 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/db_smvcm" userId="root" password="root">
		</jdbcConnection>
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>
		<!--生成Model类存放位置 -->
		<javaModelGenerator targetPackage="com.sword.smvcm.config.pojo"
			targetProject="smvcm-facade-config">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		<!--生成映射文件存放位置 -->
		<sqlMapGenerator targetPackage="com.sword.smvcm.config.mapper"
			targetProject="smvcm-service-config">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		<!--生成Dao类存放位置 -->
		<javaClientGenerator targetPackage="com.sword.smvcm.config.mapper"
			type="XMLMAPPER" targetProject="smvcm-service-config">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		
		<!-- 公众号底部菜单配置 -->
		<table tableName="tb_config" domainObjectName="TbConfig"
			enableCountByExample="false" enableUpdateByExample="true"
			enableDeleteByExample="true" enableSelectByExample="true"
			selectByExampleQueryId="false">
			<generatedKey column="id" sqlStatement="MySql" identity="true"/>
		</table>
	</context>
</generatorConfiguration>