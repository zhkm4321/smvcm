<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<properties resource="mybatis/gen_db.properties" />
	<!--数据库驱动 -->
	<classPathEntry location="${driver.jar.path}" />
	<context id="DB2Tables" targetRuntime="MyBatis3Simple"
		defaultModelType="flat">
		<property name="beginningDelimiter" value="`" />
		<property name="endingDelimiter" value="`" />

		<plugin type="tk.mybatis.mapper.generator.MapperPlugin">
			<property name="mappers" value="tk.mybatis.mapper.common.Mapper" />
		</plugin>

		<commentGenerator>
			<property name="suppressDate" value="true" />
		</commentGenerator>
		<!--数据库链接地址账号密码 -->
		<jdbcConnection driverClass="${jdbc.driverClass}"
			connectionURL="${jdbc.url}" userId="${jdbc.user}" password="${jdbc.password}">
		</jdbcConnection>
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>
		<!--生成Model类存放位置 -->
		<javaModelGenerator targetPackage="com.sword.smvcm.config.pojo"
			targetProject="../smvcm-facade-config/src/main/java">
		</javaModelGenerator>
		<!--生成映射文件存放位置 -->
		<sqlMapGenerator targetPackage="com.sword.smvcm.config.mapper"
			targetProject="../smvcm-service-config/src/main/java">
		</sqlMapGenerator>
		<!--生成Dao类存放位置 -->
		<javaClientGenerator targetPackage="com.sword.smvcm.config.mapper"
			type="XMLMAPPER" targetProject="../smvcm-service-config/src/main/java">
		</javaClientGenerator>

		<!-- 公众号底部菜单配置 -->
		<table tableName="tb_config" domainObjectName="TbConfig">
			<generatedKey column="id" sqlStatement="MySql" identity="true" />
		</table>
	</context>
</generatorConfiguration>